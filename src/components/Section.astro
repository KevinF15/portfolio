---
interface Props {
  pretitle?: string;
  title?: string;
}

const { pretitle, title } = Astro.props;
---

<div class='flex flex-col gap-8 my-12 lg:my-24 items-center'>
  <div class="flex flex-col items-center">
    {
      pretitle && (
        <p class='font-medium text-light-blue'>
          {pretitle}
        </p>
      )
    }
    <h2 class='text-3xl font-extrabold'>{title}</h2>
  </div>
  
  <slot />
</div>
