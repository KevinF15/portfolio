---
import Card from '@/components/Card.astro';
import { Prism } from '@astrojs/prism';
---

<Card class='group' noPadding>
  <div
    class='shadow-lg text-gray-100 text-sm font-mono subpixel-antialiased leading-normal'
  >
    <div
      class='top flex bg-dark-gray/75 m-[2px] py-3 px-5 rounded-t-md border-b border-b-light-gray transition-all duration-300 ease-in-out group-hover:border-transparent group-hover:bg-dark-gray/15'
    >
      <div class='h-3 w-3 bg-red-500 rounded-full'></div>
      <div class='ml-2 h-3 w-3 bg-yellow-400 rounded-full'></div>
      <div class='ml-2 h-3 w-3 bg-green-500 rounded-full'></div>
    </div>
    <div class='flex p-5 break-words'>
      <Prism
        lang='js'
        code={`const littleAboutMe = {
  currentOccupation: 'Web developer and designer, looking for new opportunities',
  technologies: {
    frontEnd: {
      CSS: ['TailwindCSS', 'Shadcn'],
      JS: ['TypeScript', 'React.js'],
      frameworks: ['Astro'],
    },
    backEnd: {
      PHP: ['PHP'],
      database: ['MySQL'],
    },
  },
  hobbies: {
    design: ['UI/UX Design', 'Images/Flyers Design'],
    software: ['Adobe Photoshop', 'Adobe Illustrator', 'Figma'],
  },
};`}
      />
    </div>
  </div>
</Card>
